@model WebApp.Models.Review

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Review</title>
</head>
<body class="bg-light">
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h2 class="text-center mb-4">Add Review</h2>
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CompanyId" value="@ViewBag.CompanyId"/>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="form-label">Rating (1-5)</label>
                <input asp-for="Rating" type="number" min="1" max="5" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comment" class="form-label">Comment</label>
                <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Review</button>
        </form>

        <div class="text-center mt-4">
            <a asp-action="Details" asp-controller="Company" asp-route-id="@ViewBag.CompanyId" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
</body>
</html>
